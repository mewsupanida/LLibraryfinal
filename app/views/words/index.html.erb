<h1>Words (<%= @words.length %>)</h1>

<%= link_to 'New Word', new_word_path %>

<table>
  <thead>
    <tr>
      <th>Term</th>
      <th>Term definition</th>
      <th>Term acronym</th>
      <th>Term tags</th>
      <th>Search count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.term %></td>
        <td><%= word.term_definition %></td>
        <td><%= word.term_acronym %></td>
        <td><%= word.term_tags %></td>
        <td><%= word.search_count %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path %>
